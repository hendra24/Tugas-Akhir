<Window x:Class="org.GDLStudio.RuleViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GDL Features and Rules" Height="461" Width="498" Icon="Images/GDL ICO.png">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TreeView  Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Name="treeView0"
                  Width="{Binding ElementName=Container,Path=ActualWidth}"
               Height="{Binding ElementName=Container,Path=ActualHeight}" FontSize="20" />
        <TreeView  Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Name="treeView1"
                  Width="{Binding ElementName=Container,Path=ActualWidth}"
               Height="{Binding ElementName=Container,Path=ActualHeight}" FontSize="20" />
    </Grid>
</Window>
